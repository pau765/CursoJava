    static int[] rellenaPares(int longitud, int fin){
    int pares[]= new int [longitud];
    int i = 0;
    while (i <  pares.length) {
        int numero = (int) (Math.random() * fin + 1);
        if (numero % 2 == 0) {
            pares[i] = numero;
            i++;
        }
    }
    Arrays.sort(pares);
    System.out.println(Arrays.toString(pares));
    return (pares);
    }
